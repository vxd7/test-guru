<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/error', resource: @answer %>

  <p>
    <%= form.label :content %><br>
    <%= form.text_area :content, id: :answer_content, rows: 7, cols: 60 %>
  </p>

  <p>
    <%= form.label :correct %><br>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

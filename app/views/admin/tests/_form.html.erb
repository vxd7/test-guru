<h1><%= test_header(@test) %></h1>

<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/error', resource: @test %>

  <p>
    <%= form.label :title%><br>
    <%= form.text_field :title, id: :test_title%>
  </p>

  <p>
    <%= form.label :level %><br>
    <%= form.text_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id %><br>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>


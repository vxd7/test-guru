<h1><%= question_header(@question) %></h1>

<%= form_with model: [@test, @question], local: true do |form| %>
  <%= render 'shared/error', resource: @question %>

  <p>
    <%= form.label :content %><br>
    <%= form.text_field :content, id: :question_content %>
  </p>

  <p><%= form.submit %></p>
<% end %>
